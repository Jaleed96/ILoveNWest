<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ScheduleActivities">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        android:background="#8fb9a8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activityTypeImg1"
            android:layout_width="30sp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:src="@drawable/parchment" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activityName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:text="@string/activity1HARDCODED"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/activityTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:text="@string/dateHARDCODED" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1d1b5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activityTypeImg2"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:src="@drawable/biology" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activityName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity2HARDCODED"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/activityTime2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date2HARDCODED" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>